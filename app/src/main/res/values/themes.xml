<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GeoMute" parent="android:Theme.Material.Light.NoActionBar">


    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.GeoMute" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->


    </style>

    <style name="Theme.GeoMute.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listDivider">@drawable/recycle_divider</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.GeoMute.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.GeoMute.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="NavMenuStyle">
        <item name="fontFamily">@font/u_semi_bold</item>
        <item name="android:textSize">16sp</item><!-- text size in menu-->



        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">2dp</item>
        <item name="listPreferredItemPaddingLeft">2dp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">0dp</item>
        <item name="listPreferredItemPaddingRight">0dp</item>
    </style>
</resources>