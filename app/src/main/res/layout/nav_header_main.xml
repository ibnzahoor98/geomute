<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dim_32"
    android:background="@color/brand_blue"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:padding="@dimen/dim_16"
            android:id="@+id/imageView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo_straight" />

        <TextView
            android:layout_marginStart="@dimen/dim_16"
            android:layout_marginEnd="@dimen/dim_16"
            android:layout_marginBottom="@dimen/dim_2"
            android:text="Saad Zahoor"
            android:fontFamily="@font/u_extra_bold"
            android:textSize="@dimen/f_16"
            android:id="@+id/name"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  />

        <TextView

            android:layout_marginStart="@dimen/dim_16"
            android:layout_marginEnd="@dimen/dim_16"
            android:text="Id: DHKJASDJ290JDOS"
            android:fontFamily="@font/u_semi_bold"
            android:textSize="@dimen/f_12"
            android:id="@+id/id"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/dim_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.google.android.gms.ads.AdView

            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adViewNavHeader"
            android:layout_gravity="center"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            android:layout_marginBottom="@dimen/dim_16"
            ads:adUnitId="@string/ad_banner_test">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

    <TextView
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dim_16"
        android:layout_marginStart="@dimen/dim_16"
        android:layout_marginEnd="@dimen/dim_16"
        android:layout_marginBottom="@dimen/dim_4"
        android:padding="@dimen/dim_8"
        android:text="Guest"
        android:fontFamily="@font/u_semi_bold"
        android:textSize="@dimen/f_12"
        android:id="@+id/userType"
        android:background="@drawable/light_gray_rounded_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>