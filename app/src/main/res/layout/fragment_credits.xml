<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@drawable/light_gray_rounded_bg"

            android:id="@+id/credit1"
            android:layout_marginTop="@dimen/dim_16"
            android:layout_marginStart="@dimen/dim_16"
            android:layout_marginEnd="@dimen/dim_16"
            android:layout_marginBottom="@dimen/dim_8"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginTop="@dimen/dim_16"
                android:layout_marginStart="@dimen/dim_16"
                android:id="@+id/credit1Image"
                android:padding="@dimen/dim_8"
                android:src="@drawable/credits"
                android:clickable="false"
                android:layout_width="50dp"
                android:layout_marginBottom="@dimen/dim_8"
                android:layout_marginEnd="@dimen/dim_8"

                android:layout_height="50dp">

            </ImageView>

            <RelativeLayout
                android:layout_marginStart="@dimen/dim_16"
                android:layout_below="@id/credit1Image"
                android:layout_marginBottom="@dimen/dim_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/whatsappTitle"
                    android:text="Flaticon"
                    android:textColor="@color/black"
                    android:textSize="@dimen/f_20"
                    android:fontFamily="@font/u_extra_bold"

                    android:layout_marginBottom="@dimen/dim_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/credit1Desp"
                    android:layout_below="@id/whatsappTitle"
                    android:text="Icons provided by flaticon.com"

                    android:layout_marginEnd="@dimen/dim_16"
                    android:textColor="@color/black"
                    android:textSize="@dimen/f_16"
                    android:fontFamily="@font/u_semi_bold"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>

        </RelativeLayout>




    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>