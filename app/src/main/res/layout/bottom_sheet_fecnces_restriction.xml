<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="@dimen/dim_elevation"
    android:id="@+id/bottomSheet"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">



    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center|top"
        android:layout_marginTop="@dimen/dim_16"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:background="@drawable/light_gray_rounded_bg"
            android:padding="@dimen/dim_16"
            android:src="@drawable/limit_reached"
            android:clickable="false"
            android:layout_width="70dp"
            android:layout_marginBottom="@dimen/dim_16"
            android:layout_height="70dp">

        </ImageView>

        <TextView
            android:text="Reached max limit"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/f_20"
            android:fontFamily="@font/u_extra_bold"

            android:layout_marginStart="@dimen/dim_16"
            android:layout_marginEnd="@dimen/dim_16"
            android:layout_marginBottom="@dimen/dim_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView

            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/f_16"
            android:fontFamily="@font/u_semi_bold"
            android:layout_marginStart="@dimen/dim_32"
            android:layout_marginEnd="@dimen/dim_32"

             android:id="@+id/reachedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/connect"

            android:layout_marginStart="@dimen/dim_16"
            android:layout_marginEnd="@dimen/dim_16"
            android:layout_marginTop="@dimen/dim_32"
            android:layout_marginBottom="@dimen/dim_16"
            android:layout_width="match_parent"
            android:text="Login with google"
            android:textAllCaps="false"
            android:textSize="@dimen/f_16"
            android:textColor="@color/white"
            android:fontFamily="@font/u_extra_bold"
            android:background="@drawable/red_rounded_bg"
            android:layout_height="@dimen/button_height">

        </androidx.appcompat.widget.AppCompatButton>


    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>

