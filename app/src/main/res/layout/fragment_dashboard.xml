<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center|top"
        android:layout_marginTop="@dimen/dim_64"
        android:id="@+id/emptyFenceContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:background="@drawable/light_gray_rounded_bg"
            android:padding="@dimen/dim_16"
            android:src="@drawable/empty_list"
            android:clickable="false"
            android:layout_width="70dp"

            android:id="@+id/nofenceDetectedImage"
            android:layout_marginBottom="@dimen/dim_16"
            android:layout_height="70dp">

        </ImageView>

        <TextView
            android:text="You have not created any quiet location area. Please click on bottom right button to create."
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/f_16"
            android:fontFamily="@font/u_semi_bold"
            android:layout_marginStart="@dimen/dim_16"
            android:layout_marginEnd="@dimen/dim_16"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>

    <ProgressBar

        android:id="@+id/fenceLoading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/black"
        android:layout_width="20dp"
        android:layout_height="20dp">

    </ProgressBar>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/transactionHistoryContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/dim_16" >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    <RelativeLayout
        android:layout_width="60dp"

        android:id="@+id/idFABHome"
        android:background="@drawable/blue_rounded_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:elevation="@dimen/dim_elevation"
        android:layout_marginEnd="@dimen/dim_16"
        android:layout_marginBottom="@dimen/dim_16"
        android:layout_height="60dp">
        <ImageView
            android:padding="@dimen/dim_16"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:src="@drawable/add"
            app:tint="@color/white">

        </ImageView>

    </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>