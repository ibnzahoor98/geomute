<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/container">
    <RelativeLayout
        android:elevation="@dimen/dim_elevation"
        android:id="@+id/navbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingStart="@dimen/dim_16"
        android:paddingEnd="@dimen/dim_16"
        android:layout_height="60dp">


        <TextView
            android:text="Details"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:fontFamily="@font/u_extra_bold"
            android:textSize="@dimen/f_20"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:scrollbars="none"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.gms.ads.AdView

                android:visibility="gone"
                android:id="@+id/adViewDetailFenceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/ad_banner_test">
            </com.google.android.gms.ads.AdView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMapView"
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/roundness"
                android:layout_margin="@dimen/dim_16"
                android:layout_height="300dp">

                <fragment


                    android:id="@+id/mapview"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:cameraBearing="112.5"
                    class="com.google.android.gms.maps.SupportMapFragment"

                    app:cameraTargetLat="-33.796923"
                    app:cameraTargetLng="150.922433"
                    app:cameraTilt="30"
                    app:cameraZoom="15"
                    app:liteMode="true"
                    app:mapType="normal"
                    app:uiCompass="false"
                    app:uiRotateGestures="false"
                    app:uiScrollGestures="false"
                    app:uiTiltGestures="false"
                    app:uiZoomControls="false"
                    app:uiZoomGestures="false"

                    />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/cardMapView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim_16"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/titleValue"
                        android:text="Saad Zahoor"
                        android:textSize="@dimen/f_16"
                        android:textColor="@color/black"
                        android:fontFamily="@font/u_extra_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView

                        android:layout_below="@id/titleValue"
                        android:id="@+id/titleHeading"
                        android:text="Title"
                        android:layout_marginTop="@dimen/dim_4"
                        android:textSize="@dimen/f_12"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/u_semi_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </RelativeLayout>

                <TextView
                    android:height="1dp"
                    android:background="#33162052"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/radiusValue"
                        android:text="200 m"
                        android:textSize="@dimen/f_16"
                        android:textColor="@color/black"
                        android:fontFamily="@font/u_extra_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView

                        android:layout_below="@id/radiusValue"
                        android:id="@+id/radiusHeading"
                        android:text="Radius"
                        android:layout_marginTop="@dimen/dim_4"
                        android:textSize="@dimen/f_12"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/u_semi_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </RelativeLayout>
                <TextView
                    android:height="1dp"
                    android:background="#33162052"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/tagValue"
                        android:text="200 m"
                        android:textSize="@dimen/f_16"
                        android:textColor="@color/black"
                        android:fontFamily="@font/u_extra_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView

                        android:layout_below="@id/tagValue"
                        android:id="@+id/tagHeading"
                        android:text="Tag"
                        android:textSize="@dimen/f_12"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/u_semi_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </RelativeLayout>
                <TextView
                    android:height="1dp"
                    android:background="#33162052"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/timestampValue"
                        android:text="200 m"
                        android:textSize="@dimen/f_16"
                        android:textColor="@color/black"
                        android:fontFamily="@font/u_extra_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView

                        android:layout_below="@id/timestampValue"
                        android:id="@+id/timestampHeading"
                        android:text="Timestamp"
                        android:layout_marginTop="@dimen/dim_4"
                        android:textSize="@dimen/f_12"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/u_semi_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </RelativeLayout>
                <TextView
                    android:height="1dp"
                    android:background="#33162052"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/latValue"
                        android:text="200 m"
                        android:textSize="@dimen/f_16"
                        android:textColor="@color/black"
                        android:fontFamily="@font/u_extra_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView

                        android:layout_below="@id/latValue"
                        android:id="@+id/latHeading"
                        android:text="Latitude"
                        android:layout_marginTop="@dimen/dim_4"
                        android:textSize="@dimen/f_12"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/u_semi_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </RelativeLayout>
                <TextView
                    android:height="1dp"
                    android:background="#33162052"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/longValue"
                        android:text="200 m"
                        android:textSize="@dimen/f_16"
                        android:textColor="@color/black"
                        android:fontFamily="@font/u_extra_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView

                        android:layout_below="@id/longValue"
                        android:id="@+id/longHeading"
                        android:text="Longitude"
                        android:layout_marginTop="@dimen/dim_4"
                        android:textSize="@dimen/f_12"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/u_semi_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </RelativeLayout>
                <TextView
                    android:height="1dp"
                    android:background="#33162052"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:id="@+id/idValue"
                        android:text="200 m"
                        android:textSize="@dimen/f_16"
                        android:textColor="@color/black"
                        android:fontFamily="@font/u_extra_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView

                        android:layout_below="@id/idValue"
                        android:id="@+id/idHeading"
                        android:text="Fence id"
                        android:layout_marginTop="@dimen/dim_4"
                        android:textSize="@dimen/f_12"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/u_semi_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>


                </RelativeLayout>
                <TextView
                    android:height="1dp"
                    android:background="#33162052"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
<!--                <RelativeLayout-->

<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content">-->

<!--                    <TextView-->

<!--                        android:id="@+id/muteModeValue"-->
<!--                        android:text="200 m"-->
<!--                        android:textSize="@dimen/f_16"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:fontFamily="@font/u_extra_bold"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content">-->

<!--                    </TextView>-->

<!--                    <TextView-->

<!--                        android:layout_below="@id/muteModeValue"-->
<!--                        android:id="@+id/muteModeHeading"-->
<!--                        android:text="Mute mode"-->
<!--                        android:layout_marginTop="@dimen/dim_4"-->
<!--                        android:textSize="@dimen/f_12"-->
<!--                        android:textColor="@color/gray"-->
<!--                        android:fontFamily="@font/u_semi_bold"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content">-->

<!--                    </TextView>-->


<!--                </RelativeLayout>-->

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/delete"

                    android:layout_marginTop="@dimen/dim_32"
                    android:layout_marginBottom="@dimen/dim_16"
                    android:layout_width="match_parent"
                    android:text="Delete silent geo fence"
                    android:textAllCaps="false"
                    android:textSize="@dimen/f_16"
                    android:textColor="@color/white"
                    android:fontFamily="@font/u_extra_bold"
                    android:background="@drawable/red_rounded_bg"
                    android:layout_height="@dimen/button_height">

                </androidx.appcompat.widget.AppCompatButton>
                <RelativeLayout

                    android:id="@+id/progressBar"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dim_32"
                    android:background="@drawable/red_rounded_bg"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/dim_16"

                    android:layout_height="@dimen/button_height">

                    <ProgressBar
                        android:indeterminate="true"
                        android:indeterminateTintMode="src_atop"
                        android:indeterminateTint="@color/white"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </ProgressBar>


                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>

