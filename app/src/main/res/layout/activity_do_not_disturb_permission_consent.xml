<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.core.widget.NestedScrollView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="top"
            android:layout_marginTop="@dimen/dim_32"
            android:id="@+id/emptyFenceContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:layout_marginStart="@dimen/dim_16"
                android:background="@drawable/light_gray_rounded_bg"
                android:padding="@dimen/dim_16"
                android:src="@drawable/silent"
                android:clickable="false"
                android:layout_width="70dp"
                android:layout_marginBottom="@dimen/dim_16"
                android:layout_height="70dp">

            </ImageView>

            <TextView
                android:text="'Do not disturb' request"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="@dimen/f_24"
                android:fontFamily="@font/u_extra_bold"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginEnd="@dimen/dim_16"

                android:layout_marginBottom="@dimen/dim_32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:text="Why We Need 'Do Not Disturb' Permission:"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="@dimen/f_20"
                android:fontFamily="@font/u_extra_bold"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginEnd="@dimen/dim_16"

                android:layout_marginBottom="@dimen/dim_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:text="Our app requests the 'Do Not Disturb' permission to give you seamless control over your device's audio settings when you enter a silent zone.\n\nThis permission allows us to adjust your device's audio profile to ensure a disturbance-free experience without the need for manual intervention."
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="@dimen/f_16"
                android:fontFamily="@font/u_semi_bold"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginEnd="@dimen/dim_16"

                android:layout_marginBottom="@dimen/dim_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:text="Step 1 is to click on below grnat access button. A new window will pop up and click on below app icon as shown below."
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="@dimen/f_16"
                android:fontFamily="@font/u_semi_bold"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginEnd="@dimen/dim_16"

                android:layout_marginBottom="@dimen/dim_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:src="@drawable/no_disturb_1"
                android:layout_width="match_parent"
                android:layout_height="100dp">

            </ImageView>
            <TextView
                android:text="Step 2 is to click on 'Allow Do Not Disturb'"
                android:gravity="start"
                android:textColor="@color/black"
                android:textSize="@dimen/f_16"
                android:fontFamily="@font/u_semi_bold"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginEnd="@dimen/dim_16"

                android:layout_marginTop="@dimen/dim_16"
                android:layout_marginBottom="@dimen/dim_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:src="@drawable/no_disturb_2"
                android:layout_width="match_parent"
                android:layout_height="240dp">

            </ImageView>

            <androidx.appcompat.widget.AppCompatButton

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/grant"
                android:layout_marginStart="@dimen/dim_16"
                android:layout_marginEnd="@dimen/dim_16"
                android:layout_marginTop="@dimen/dim_32"
                android:layout_marginBottom="@dimen/dim_16"
                android:layout_width="match_parent"
                android:text="Grant access"
                android:textAllCaps="false"
                android:textSize="@dimen/f_16"
                android:textColor="@color/white"
                android:fontFamily="@font/u_extra_bold"
                android:background="@drawable/blue_rounded_bg"
                android:layout_height="@dimen/button_height">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>